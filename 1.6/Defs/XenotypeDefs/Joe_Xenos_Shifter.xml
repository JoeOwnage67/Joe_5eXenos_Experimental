<Defs> 

	<!-- Shifter HeadTypeDef -->
	<HeadTypeDef ParentName="AverageBase">
	    	<defName>Joe_ShifterHead_Head</defName>
	      	<graphicPath>Things/Pawn/Humanlike/Heads/ShifterHead/ShifterHead</graphicPath>
	      	<gender>None</gender>
	      	<requiredGenes>
	        	<li>Joe_ShifterHead_Gene</li>
	      	</requiredGenes>
			<selectionWeight>1</selectionWeight>
	</HeadTypeDef>	

	<!-- Shifter Head Gene Def -->
	<GeneDef ParentName="GeneJawBase">
		<defName>Joe_ShifterHead_Gene</defName>
		<label>shifter head</label>
		<description>This gene reshapes the carrier’s head into a lupine visage—sleek, angular, and brimming with primal intensity. Keen senses, powerful jaws, and expressive ears grant the bearer a predator’s edge and a pack-born charisma. It’s more than a look; it’s a legacy of wild cunning and untamed spirit.</description>
	    <iconPath>UI/Icons/Genes/Joe_ShifterHead_Gene</iconPath>
		<forcedHeadTypes>
	    	<li>Joe_ShifterHead_Head</li>
	    </forcedHeadTypes>
		<displayOrderInCategory>9802</displayOrderInCategory>
		<biostatMet>0</biostatMet>		
		<renderNodeProperties>
			<li>
				<texPath>Things/Pawn/Humanlike/Heads/ShifterHead/ShifterHead</texPath>
				<colorType>Hair</colorType>	
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>				
				<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
				<useSkinShader>false</useSkinShader>
				<useRottenColor>true</useRottenColor>
				<shaderTypeDef>CutoutComplex</shaderTypeDef>				
				<parentTagDef>Head</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<visibleFacing>
					<li>East</li>
					<li>South</li>
					<li>West</li>
					<li>North</li>
				</visibleFacing>
				<drawData>
					<defaultData>
						<layer>30</layer>
					</defaultData>
				</drawData>
			</li>
		</renderNodeProperties>			
		<hairTagFilter>
			<whitelist>true</whitelist>
			<tags>
		    	<li>Bald</li>
		    </tags>
		 </hairTagFilter>
		 <beardTagFilter>
			<whitelist>true</whitelist>
		    <tags>
		    	<li>NoBeard</li>
		    </tags>
		</beardTagFilter>		
