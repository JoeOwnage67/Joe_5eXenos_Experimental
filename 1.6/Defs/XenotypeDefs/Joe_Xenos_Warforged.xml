<?xml version="1.0" encoding="utf-8" ?>
<Defs>

		<!-- WarforgedHead -->
		<HeadTypeDef ParentName="AverageBase">
				<defName>Joe_WarforgedHead_Head</defName>
				<graphicPath>Things/Pawn/Humanlike/Heads/WarforgedHead/WarforgedHead</graphicPath>
				<gender>None</gender>
				<requiredGenes>
					<li>Joe_WarforgedHead_Gene</li>
				</requiredGenes>
		</HeadTypeDef>

		<!-- Joe_WarforgedHead Gene -->
		<GeneDef ParentName="GeneJawBase">
			<defName>Joe_WarforgedHead_Gene</defName>
			<label>warforged head</label>
			<description>The head of a warforged is constructed of both organic and inorganic materials. All warforged have crystalline eyes, a hinged jawline and a prominent brow.</description>
			<iconPath>UI/Icons/Genes/Joe_WarFace_Gene</iconPath>
			<forcedHeadTypes>	    	
				<li>Joe_WarforgedHead_Head</li>
			</forcedHeadTypes>
			<displayOrderInCategory>9802</displayOrderInCategory>
			<biostatMet>2</biostatMet>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<postFactor>1.1</postFactor>
				</li>
			</capMods>
			<statOffsets>
				<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
				<ToxicEnvironmentResistance>-0.2</ToxicEnvironmentResistance>
			</statOffsets>
			<hairTagFilter>
				<whitelist>true</whitelist>
				<tags>
					<li>Bald</li>
				</tags>
			</hairTagFilter>
			<beardTagFilter>
				<whitelist>true</whitelist>
				<tags>
					<li>NoBeard</li>
				</tags>
			</beardTagFilter>
			<renderNodeProperties>
				<li>
					<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
					<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
					<texPath>Things/Pawn/Humanlike/Heads/WarforgedHead/WarforgedHead</texPath>
					<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
					<useSkinShader>true</useSkinShader>
					<useRottenColor>true</useRottenColor>
					<colorType>Skin</colorType>
					<shaderTypeDef>CutoutComplex</shaderTypeDef>
					<parentTagDef>Head</parentTagDef>
					<rotDrawMode>Fresh, Rotting</rotDrawMode>
					<visibleFacing>
						<li>East</li>
						<li>South</li>
						<li>West</li>
						<li>North</li>
					</visibleFacing>
					<drawData>
						<defaultData>
							<layer>50</layer>
						</defaultData>
					</drawData>
				</li>
			</renderNodeProperties>
		</GeneDef>

		<!-- Warforged Fur -->
		<FurDef>
			<defName>Joe_WarforgedBody_Fur</defName>
			<noGraphic>true</noGraphic>
			<bodyTypeGraphicPaths>
			<Male>Things/Pawn/Humanlike/Bodies/InfinityBody/InfinityBody_Male</Male>
			<Female>Things/Pawn/Humanlike/Bodies/InfinityBody/InfinityBody_Female</Female>
			</bodyTypeGraphicPaths>
		</FurDef>

		<!-- WarforgedBody -->
		<GeneDef ParentName="Joe_SkinBodyBase">
			<defName>Joe_WarforgedDefensiveBody_Gene</defName>
			<label>warforged defensive chassis</label>
			<labelShortAdj>warforged body</labelShortAdj>
			<description>This warforged was engineered as a frontline shell: pressure-locked plating, heat-diffusive channels, and hardened joints. Not agile, but stubbornly hard to disable.</description>
			<biostatCpx>-5</biostatCpx>
			<prerequisite>
				<li>Joe_WarforgedHead_Gene</li>
			</prerequisite>
			<selectionWeight>0</selectionWeight>
			<fur>Joe_WarforgedBody_Fur</fur>
			<skinIsHairColor>false</skinIsHairColor>
			<tattoosVisible>false</tattoosVisible>
			<exclusionTags>
					<li>Joe_WarforgedBodyFrame</li>
			</exclusionTags>
			<renderNodeProperties>
				<li>
					<nodeClass>PawnRenderNode_Fur</nodeClass>
					<workerClass>PawnRenderNodeWorker_Fur</workerClass>
					<useSkinShader>false</useSkinShader>
					<baseLayer>5</baseLayer>
					<rotDrawMode>Fresh, Rotting</rotDrawMode>
					<colorType>Skin</colorType>
					<parentTagDef>Body</parentTagDef>
				</li>
			</renderNodeProperties>
			<displayOrderInCategory>400</displayOrderInCategory>
			<iconPath>UI/Icons/Genes/Joe_WarBody_Gene</iconPath>
			<skinColorOverride>(102, 102, 105)</skinColorOverride>	
			<modExtensions>
				<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VEF.Genes.GeneExtension">
					<furHidesBody>true</furHidesBody>
					<useSkinColorForFur>true</useSkinColorForFur>
				</li>
			</modExtensions>	
			<capMods>
				<li>
					<capacity>Moving</capacity>
					<postFactor>0.97</postFactor> <!-- Slight mobility tax for heavier frame -->
				</li>
			</capMods>
			<statOffsets>
				<ArmorRating_Blunt>0.15</ArmorRating_Blunt>
				<ArmorRating_Sharp>0.10</ArmorRating_Sharp>
				<ArmorRating_Heat>0.05</ArmorRating_Heat>
				<Flammability>-0.30</Flammability>
				<PainShockThreshold>0.05</PainShockThreshold>
				<MoveSpeed>-0.02</MoveSpeed>
			</statOffsets>
		</GeneDef>

			<!-- Warforged Industrial Frame -->
		<GeneDef ParentName="Joe_SkinBodyBase">
			<defName>Joe_WarforgedIndustrialBody_Gene</defName>
			<label>warforged industrial frame</label>
			<labelShortAdj>industrial frame</labelShortAdj>
			<description>A production-optimized warforged frame: reinforced servo anchors and modular tool ports enhance heavy labor output. Efficient, but a touch slower and socially inert.</description>
			<biostatCpx>-4</biostatCpx>
			<selectionWeight>0</selectionWeight>
			<fur>Joe_WarforgedBody_Fur</fur>
			<skinIsHairColor>false</skinIsHairColor>
			<tattoosVisible>false</tattoosVisible>
			<exclusionTags>
				<li>Joe_WarforgedBodyFrame</li>
			</exclusionTags>
			<renderNodeProperties>
				<li>
					<nodeClass>PawnRenderNode_Fur</nodeClass>
					<workerClass>PawnRenderNodeWorker_Fur</workerClass>
					<useSkinShader>false</useSkinShader>
					<baseLayer>5</baseLayer>
					<rotDrawMode>Fresh, Rotting</rotDrawMode>
					<colorType>Skin</colorType>
					<parentTagDef>Body</parentTagDef>
				</li>
			</renderNodeProperties>
			<displayOrderInCategory>401</displayOrderInCategory>
			<iconPath>UI/Icons/Genes/Joe_WarBody_Gene</iconPath>
			<skinColorOverride>(102, 102, 105)</skinColorOverride>
			<modExtensions>
				<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VEF.Genes.GeneExtension">
					<furHidesBody>true</furHidesBody>
					<useSkinColorForFur>true</useSkinColorForFur>
				</li>
			</modExtensions>
			<capMods>
				<li>
					<capacity>Moving</capacity>
					<postFactor>0.98</postFactor>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<postFactor>1.05</postFactor>
				</li>
			</capMods>
			<statOffsets>
				<ConstructionSpeed>0.12</ConstructionSpeed>
				<MiningSpeed>0.10</MiningSpeed>
				<WorkSpeedGlobal>0.05</WorkSpeedGlobal>
				<ArmorRating_Blunt>0.05</ArmorRating_Blunt>
				<ArmorRating_Sharp>0.05</ArmorRating_Sharp>
				<Flammability>-0.20</Flammability>
				<MoveSpeed>-0.02</MoveSpeed>
				<SocialImpact>-0.05</SocialImpact>
			</statOffsets>
		</GeneDef>

		<!-- Warforged Agile Frame -->
		<GeneDef ParentName="Joe_SkinBodyBase">
			<defName>Joe_WarforgedScoutBody_Gene</defName>
			<label>warforged scout frame</label>
			<labelShortAdj>scout frame</labelShortAdj>
			<description>This warforged body is a lightweight lattice of flex-linked plates and servo-tensioned tendons grants superior mobility and combat evasion at the expense of armor integrity.</description>
			<biostatCpx>-3</biostatCpx>
			<selectionWeight>0</selectionWeight>
			<fur>Joe_WarforgedBody_Fur</fur>
			<skinIsHairColor>false</skinIsHairColor>
			<tattoosVisible>false</tattoosVisible>
			<exclusionTags>
				<li>Joe_WarforgedBodyFrame</li>
			</exclusionTags>
			<renderNodeProperties>
				<li>
					<nodeClass>PawnRenderNode_Fur</nodeClass>
					<workerClass>PawnRenderNodeWorker_Fur</workerClass>
					<useSkinShader>false</useSkinShader>
					<baseLayer>5</baseLayer>
					<rotDrawMode>Fresh, Rotting</rotDrawMode>
					<colorType>Skin</colorType>
					<parentTagDef>Body</parentTagDef>
				</li>
			</renderNodeProperties>
			<displayOrderInCategory>402</displayOrderInCategory>
			<iconPath>UI/Icons/Genes/Joe_WarBody_Gene</iconPath>
			<skinColorOverride>(102, 102, 105)</skinColorOverride>
			<modExtensions>
				<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VEF.Genes.GeneExtension">
					<furHidesBody>true</furHidesBody>
					<useSkinColorForFur>true</useSkinColorForFur>
				</li>
			</modExtensions>
			<capMods>
				<li>
					<capacity>Moving</capacity>
					<postFactor>1.05</postFactor>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<postFactor>1.02</postFactor>
				</li>
			</capMods>
			<statOffsets>
				<MoveSpeed>0.08</MoveSpeed>
				<MeleeDodgeChance>0.04</MeleeDodgeChance>
				<MeleeHitChance>0.02</MeleeHitChance>
				<ArmorRating_Sharp>-0.05</ArmorRating_Sharp>
				<ArmorRating_Blunt>-0.05</ArmorRating_Blunt>
				<PainShockThreshold>-0.02</PainShockThreshold>
				<Flammability>0.10</Flammability>
			</statOffsets>
		</GeneDef>

		<!-- Warforged Siege Chassis -->
		<GeneDef ParentName="Joe_SkinBodyBase">
			<defName>Joe_WarforgedSiegeBody_Gene</defName>
			<label>warforged siege chassis</label>
			<labelShortAdj>siege chassis</labelShortAdj>
			<description>This warforged body is constructed with massively overbraced plating and inertia-damping cores, turning this frame into a walking bulwark. Terrifying staying power, but sluggish and resource-intensive to maintain.</description>
			<biostatCpx>-6</biostatCpx>
			<selectionWeight>0</selectionWeight>
			<fur>Joe_WarforgedBody_Fur</fur>
			<skinIsHairColor>false</skinIsHairColor>
			<tattoosVisible>false</tattoosVisible>
			<exclusionTags>
				<li>Joe_WarforgedBodyFrame</li>
			</exclusionTags>
			<renderNodeProperties>
				<li>
					<nodeClass>PawnRenderNode_Fur</nodeClass>
					<workerClass>PawnRenderNodeWorker_Fur</workerClass>
					<useSkinShader>false</useSkinShader>
					<baseLayer>5</baseLayer>
					<rotDrawMode>Fresh, Rotting</rotDrawMode>
					<colorType>Skin</colorType>
					<parentTagDef>Body</parentTagDef>
				</li>
			</renderNodeProperties>
			<displayOrderInCategory>404</displayOrderInCategory>
			<iconPath>UI/Icons/Genes/Joe_WarBody_Gene</iconPath>
			<skinColorOverride>(102, 102, 105)</skinColorOverride>
			<modExtensions>
				<li MayRequire="OskarPotocki.VanillaFactionsExpanded.Core" Class="VEF.Genes.GeneExtension">
					<furHidesBody>true</furHidesBody>
					<useSkinColorForFur>true</useSkinColorForFur>
