<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Obstructed Vision gene -->
	<GeneDef>
	    <defName>Joe_TorduneFollower_Gene</defName>
	    <label>Follower of Tordune</label>
	    <iconPath>UI/Icons/Genes/Joe_ObstructedVision_Gene</iconPath>
	    <description>The followers of Tordune wear an eyepatch as a badge of honour. This causes their vision to be obstructed to some degree. Tordune Loxodons make up for this by being handy with a blade.</description>	
		<displayCategory>Miscellaneous</displayCategory>
	    <displayOrderInCategory>50</displayOrderInCategory>	    
	    <biostatMet>3</biostatMet>
	    <exclusionTags>
	      <li>ShootingAccuracy</li>
	    </exclusionTags>
	    <symbolPack>
	      <prefixSymbols>
	        <li><symbol>blind</symbol></li>
	        <li><symbol>blur</symbol></li>
	        <li><symbol>squint</symbol></li>
	        <li><symbol>peek</symbol></li>
	        <li><symbol>cross</symbol></li>
	      </prefixSymbols>
	      <suffixSymbols>
	        <li><symbol>sighter</symbol></li>
	        <li><symbol>peeker</symbol></li>
	      </suffixSymbols>
	    </symbolPack>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<hediffsToBodyParts>
					<li>
						<hediff>Joe_ObstructedVision_Hediff</hediff>
						<bodyparts>
							<li>Eye</li>
						</bodyparts>
					</li>
				</hediffsToBodyParts>				
		    </li>
		</modExtensions>	
	</GeneDef>

	<HediffDef>
  		<defName>Joe_ObstructedVision_Hediff</defName>
  		<label>Obstructed Vision</label>
		<defaultLabelColor>(255,123,0)</defaultLabelColor>
  		<description>The followers of Tordune wear an eyepatch as a badge of honour. This causes their vision to be obstructed to some degree. Tordune Loxodons make up for this by being handy with a blade.</description>
  		<hediffClass>HediffWithComps</hediffClass>
  		<tendable>false</tendable>
  		<isBad>false</isBad>		
  		<stages>
    		<li>    		
    			<minSeverity>0.2</minSeverity>  
				<capMods>
					<li>
						<capacity>Sight</capacity>
						<offset>-0.5</offset>
					</li>
				</capMods> 
			</li>
  		</stages>
		<renderNodeProperties>
        	<li Class="PawnRenderNodeProperties_Eye">
				<workerClass>PawnRenderNodeWorker_HediffEye</workerClass>
				<texPath>Things/Pawn/Wounds/Eyepatch</texPath>
				<parentTagDef>Head</parentTagDef>
				<drawSize>0.3</drawSize>
				<drawData>
					<defaultData>
						<layer>70</layer>
						<offset>(-0.01, 0, -0.25)</offset>
					</defaultData>
					<dataWest>
						<flip>true</flip>
					</dataWest>
				</drawData>
            </li>
          </renderNodeProperties>
	</HediffDef>

