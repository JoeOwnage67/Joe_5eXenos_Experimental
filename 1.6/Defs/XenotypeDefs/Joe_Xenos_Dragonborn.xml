<?xml version="1.0" encoding="utf-8"?>
<Defs> 

	<!--====================== DRAGONBORN HEADS ======================-->

	<!--====================== Bases ======================-->
  
	<HeadTypeDef Name="DragonbornAverageFBase" ParentName="AverageBase" Abstract="True">
		<randomChosen>false</randomChosen>
		<gender>Female</gender>
		<requiredGenes>
			<li>Joe_DragonHead_Gene</li>
		</requiredGenes>
	</HeadTypeDef>
  
	<HeadTypeDef Name="DragonbornAverageMBase" ParentName="AverageBase" Abstract="True">
		<randomChosen>false</randomChosen>
		<gender>Male</gender>
		<requiredGenes>
			<li>Joe_DragonHead_Gene</li>
		</requiredGenes>
	</HeadTypeDef>

	<!--====================== Average Heads ======================-->

	<HeadTypeDef ParentName="DragonbornAverageFBase">
		<defName>Joe_DragonbornFemale_Head</defName>
		<graphicPath>Things/Pawn/Humanlike/Heads/DragonHead/Female/DragonHeadFemale</graphicPath>
		<!--<eyeOffsetEastWest>(0.11, 0, 0.19)</eyeOffsetEastWest>-->
	</HeadTypeDef>
  
	<HeadTypeDef ParentName="DragonbornAverageMBase">
		<defName>Joe_DragonbornMale_Head</defName>
		<graphicPath>Things/Pawn/Humanlike/Heads/DragonHead/Male/DragonHeadMale</graphicPath>
		<!--<eyeOffsetEastWest>(0.17, 0, 0.18)</eyeOffsetEastWest>-->		
	</HeadTypeDef>

	<!--====================== DRAGONBORN GENEDEFS ======================-->

		<!-- DRAGONBORN Head Gene Def -->		
		<GeneDef ParentName="GeneJawBase">
			<defName>Joe_DragonHead_Gene</defName>
			<label>dragonborn head</label>
			<description>Carriers of this gene have a head featuring dragon-like features. Their sharp teeth and enhanced senses make them formidable hunters.</description>
			<iconPath>UI/Icons/Genes/Joe_DragonHead_Gene</iconPath>		
			<displayCategory>Cosmetic</displayCategory>
			<displayOrderInCategory>98</displayOrderInCategory>
			<!--<iconColor>(0.75, 0.75, 0.75)</iconColor>-->
			<!--<minMelanin>2</minMelanin>-->
			<forcedHeadTypes>
				<li>Joe_DragonbornFemale_Head</li>
				<li>Joe_DragonbornMale_Head</li>
			</forcedHeadTypes>
			<biostatMet>2</biostatMet>	
				<skinIsHairColor>false</skinIsHairColor>			
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<postFactor>1.1</postFactor>
					</li>
				</capMods>
				<statOffsets>
					<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
					<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
					<ToxicEnvironmentResistance>-0.2</ToxicEnvironmentResistance>
					<MiningSpeed>0.1</MiningSpeed>
				</statOffsets>
				<hairTagFilter>
					<whitelist>true</whitelist>
					<tags>
						<li>Bald</li>
					</tags>
				</hairTagFilter>
				<beardTagFilter>
					<whitelist>true</whitelist>
					<tags>
						<li>NoBeard</li>
					</tags>
				</beardTagFilter>
		</GeneDef>

		<!-- Draconic Lungs Gene -->
		<GeneDef> 
			<defName>Joe_DraconicLungs_Gene</defName> 
			<label>draconic lungs</label> 
			<description>Powerful, heat-hardened lungs improve exertion and support the dragonbornâ€™s fiery nature, though they burn fuel faster.</description> 
			<iconPath>UI/Icons/Genes/Joe_DraconicLungs_Gene</iconPath> 
			<displayCategory>Miscellaneous</displayCategory> 
			<biostatMet>0</biostatMet> 
			<capMods> 
				<li> 
					<capacity>Breathing</capacity> 
					<postFactor>1.05</postFactor> 
				</li> 
			</capMods> 
			<statOffsets> 
				<MeleeHitChance>0.02</MeleeHitChance> 
				<RestRateMultiplier>-0.02</RestRateMultiplier> 
			</statOffsets> 
		</GeneDef>

		<!-- Scaled Hide Gene -->
		<GeneDef> 
			<defName>Joe_ScaledHide_Gene</defName> 
			<label>scaled hide</label> 
			<description>Layers of dense draconic scales grant improved protection, but the added weight slightly hampers speed and adaptability.</description> 
			<iconPath>UI/Icons/Genes/Joe_ScaledHide_Gene</iconPath> 
			<displayCategory>Miscellaneous</displayCategory> 
			<biostatMet>0</biostatMet> 
			<statOffsets> 
				<ArmorRating_Sharp>0.06</ArmorRating_Sharp> 
				<ArmorRating_Blunt>0.05</ArmorRating_Blunt> 
				<ArmorRating_Heat>0.04</ArmorRating_Heat> 
				<MoveSpeed>-0.03</MoveSpeed> 
				<GlobalLearningFactor>-0.02</GlobalLearningFactor> 
			</statOffsets> 
		</GeneDef>

		<!-- Dragonborn XenotypeDef -->
		<XenotypeDef> 
			<defName>Joe_Dragonborn_Xeno</defName>
			<label>dragonborn</label>
			<description>The dragonborn walk proudly through a world that greets them with fearful incomprehension. Shaped by the dragons themselves, dragonborn originally hatched from dragon eggs as a unique race, combining the best attributes of dragons and humanoids. Some dragonborn are faithful servants to true dragons, others form the ranks of soldiers in great wars, and still others find themselves adrift, with no clear calling in life.</description>
			<descriptionShort>Originally shaped by the dragons themselves, Dragonborn combine the best attributes of humanoids and dragons.</descriptionShort>
			<iconPath>UI/Icons/Xenotypes/Dragonborn</iconPath>
			<inheritable>true</inheritable>
			<genes>
				<!-- bodies -->
				<li>Body_Hulk</li> 													<!-- cpx/met = 0 -->
			
				<!-- heads -->
				<li>Joe_DragonHead_Gene</li> 										<!-- cpx/met = 0 -->

				<!-- appearance -->	
				<li MayRequire="sarg.alphagenes">AG_ScalyBody</li>					<!-- cpx = 3 met = -1 -->
				<li MayRequire="sarg.alphagenes">AG_Skin_DeeperRed</li>				<!-- cpx/met = 0 -->
				<li MayRequire="sarg.alphagenes">AG_Skin_DeepGreen</li>				<!-- cpx/met = 0 -->
				<li MayRequire="sarg.alphagenes">AG_Skin_PlantGreen</li>			<!-- cpx/met = 0 -->
				<li>Hair_BaldOnly</li>												<!-- cpx/met = 0 -->
				<li>Skin_DeepRed</li>												<!-- cpx/met = 0 -->
				<li>Skin_InkBlack</li>												<!-- cpx/met = 0 -->
				<li>Skin_PaleRed</li>												<!-- cpx/met = 0 -->
				<li>Beard_NoBeardOnly</li>											<!-- cpx/met = 0 -->
				<li MayRequire="RedMattis.BigSmall.Core">BS_LargeFrame</li>			<!-- cpx = 2 met = -2 -->
				<li>Beauty_Ugly</li>												<!-- met = 1 -->
				

				<!-- buffs -->	
				<li MayRequire="redmattis.bigsmall.core">BS_NaturalArmor</li>		<!-- cpx = 1 met = -2 -->
				<li>FireResistant</li>												<!-- met = -2 -->
				<li>MeleeDamage_Strong</li>											<!-- met = -2 -->
				<li>WoundHealing_Fast</li>											<!-- met = -2 -->
				<li>Robust</li>														<!-- met = -2 -->
				<li>Unstoppable</li>                              					<!-- cpx = 1 met = -2 -->
				<li>Joe_ScaledHide_Gene</li>		
				<li>Joe_DraconicLungs_Gene</li>

				<!-- debuffs -->
				<li>Sleepy</li> 													<!-- met = 2 -->
				<li>Aggression_Aggressive</li> 										<!-- met = 2 -->
				<li>MinTemp_SmallIncrease</li>										<!-- met = 1 -->
				<li>AptitudeTerrible_Animals</li>									<!-- cpx = 1 met = 2 -->
				<li>AptitudeTerrible_Plants</li>									<!-- cpx = 1 met = 2 -->
				<li>KillThirst</li> 												<!-- met = 4 -->
			
				<!-- flavour / personality -->
				<li MayRequire="sarg.alphagenes">AG_EggLaying</li>					<!-- cpx = 3 met = -3 -->
			
				<!-- abilities -->
				<li>FireSpew</li>													<!-- met = -2 -->

																					<!-- totals -->
																					<!-- met (-6 to +6) =  -20+14= -6 -->
																					<!-- cpx (6 to 12) = 12  -->
																					<!-- arc =  0--> 
			</genes>
		</XenotypeDef>

</Defs>