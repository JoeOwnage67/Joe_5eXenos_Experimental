<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Loxodon Head Type Def -->
	<HeadTypeDef ParentName="AverageBase">
	    	<defName>Joe_LoxoHeadTusks_Head</defName>
	      	<graphicPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadTusks/LoxoHeadTusks</graphicPath>
	      	<gender>Male</gender>
	      	<requiredGenes>
	        	<li>Joe_LoxoHead_Gene</li>
	      	</requiredGenes>
	</HeadTypeDef>

	<HeadTypeDef ParentName="AverageBase">
	    	<defName>Joe_LoxoHeadNoTusks_Head</defName>
	      	<graphicPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadNoTusks/LoxoHeadNoTusks</graphicPath>
	      	<gender>Female</gender>
	      	<requiredGenes>
	        	<li>Joe_LoxoHead_Gene</li>
	      	</requiredGenes>
	</HeadTypeDef>

	<!-- Loxodon Head Gene Def -->
	<GeneDef ParentName="GeneJawBase">
		<defName>Joe_LoxoHead_Gene</defName>
		<label>loxodon head</label>
		<description>Carriers of this gene have a head featuring elephant-like features. A nearly prehensile trunk offers a slight gain to manipulation, and their tough skin offers protection against blunt and sharp weapons.</description>
	    <iconPath>UI/Icons/Genes/Joe_LoxoHead_Gene</iconPath>		
		<displayOrderInCategory>9802</displayOrderInCategory>
		<biostatMet>2</biostatMet>	
		<skinIsHairColor>false</skinIsHairColor>	
		<capMods>
			<li>
				<capacity>Manipulation</capacity>
				<postFactor>1.1</postFactor>
			</li>
		</capMods>
		<statOffsets>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
			<ToxicEnvironmentResistance>-0.2</ToxicEnvironmentResistance>
			<MiningSpeed>0.1</MiningSpeed>
		</statOffsets>
		<hairTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>Bald</li>
			</tags>
		</hairTagFilter>
		<beardTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>NoBeard</li>
			</tags>
		</beardTagFilter>	
	</GeneDef>	

	<!-- Loxodon Tusks Gene -->
	<GeneDef ParentName="Joe_TuskGeneBase">
		<defName>Joe_LoxoTusks_Gene</defName>
		<label>loxodon tusks</label>
		<displayCategory>Joe_Tusks_Category</displayCategory>
		<description>Those born with this gene grow ornate tusks, often etched with the history of their lineage.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoTusks_Gene</iconPath>		
		<selectionWeight>0</selectionWeight>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite> 
		<forcedHeadTypes>
	    	<li>Joe_LoxoHeadTusks_Head</li>
	    </forcedHeadTypes>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<texPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadTusks/LoxoHeadTusks</texPath>
				<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
				<useSkinShader>true</useSkinShader>
				<useRottenColor>true</useRottenColor>
				<colorType>Skin</colorType>
				<shaderTypeDef>CutoutComplex</shaderTypeDef>
				<parentTagDef>Head</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<visibleFacing>
					<li>East</li>
					<li>South</li>
					<li>West</li>
					<li>North</li>
				</visibleFacing>
				<drawData>
					<defaultData>
						<layer>50</layer>
					</defaultData>
				</drawData>
			</li>
		</renderNodeProperties>
		<modExtensions>
      		<li Class="BigAndSmall.PawnExtension">
        		<forceGender>Male</forceGender>
      		</li>
    	</modExtensions>
	</GeneDef>
	
	<!-- Loxodon No Tusks Gene -->
	<GeneDef ParentName="Joe_TuskGeneBase">
		<defName>Joe_LoxoNoTusks_Gene</defName>
		<label>tuskless</label>
		<displayCategory>Joe_Tusks_Category</displayCategory>
		<description>Those born with this gene do not grow tusks, setting them apart from their tusked kin.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoTusks_Gene</iconPath>		
		<selectionWeight>0</selectionWeight>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite> 
		<forcedHeadTypes>
	    	<li>Joe_LoxoHeadNoTusks_Head</li>
	    </forcedHeadTypes>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<texPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadNoTusks/LoxoHeadNoTusks</texPath>
				<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
				<useSkinShader>true</useSkinShader>
				<useRottenColor>true</useRottenColor>
				<colorType>Skin</colorType>
				<shaderTypeDef>Cutout</shaderTypeDef>
				<parentTagDef>Head</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<visibleFacing>
					<li>East</li>
					<li>South</li>
					<li>West</li>
					<li>North</li>
				</visibleFacing>
				<drawData>
					<defaultData>
						<layer>50</layer>
					</defaultData>
				</drawData>
			</li>
		</renderNodeProperties>
		<modExtensions>
      		<li Class="BigAndSmall.PawnExtension">
        		<forceGender>Female</forceGender>
      		</li>
    	</modExtensions>
	</GeneDef>	


	<!-- Loxodon Ears Gene-->
	<GeneDef ParentName="GeneEarsBase">
		<defName>Joe_LoxoEars_Gene</defName>
		<label>loxodon ears</label>
		<selectionWeight>0</selectionWeight>
		<description>Those born with this gene grow wide, fan-like ears, said to echo the wisdom of generations past.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoEars_Gene</iconPath>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite> 		
	</GeneDef>

	<!-- Loxodon Trunk Gene -->
	<GeneDef ParentName="GeneNoseBase">
		<defName>Joe_LoxoTrunk_Gene</defName>
		<label>loxodon trunk</label>
		<description>Carriers of this gene develop powerful, dexterous trunks; an emblem of adaptability and ancestral might.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoTrunk_Gene</iconPath>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite> 		
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>410</displayOrderInCategory>    
  	</GeneDef>

	<!-- Loxodon Xenotype -->
