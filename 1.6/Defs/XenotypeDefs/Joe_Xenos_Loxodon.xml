<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Loxodon Head Type Def -->
	<HeadTypeDef ParentName="AverageBase">
	    	<defName>Joe_LoxoHeadTusks_Head</defName>
	      	<graphicPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadTusks/LoxoHeadTusks</graphicPath>
	      	<gender>Male</gender>
	      	<requiredGenes>
	        	<li>Joe_LoxoHead_Gene</li>
	      	</requiredGenes>
	</HeadTypeDef>

	<HeadTypeDef ParentName="AverageBase">
	    	<defName>Joe_LoxoHeadNoTusks_Head</defName>
	      	<graphicPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadNoTusks/LoxoHeadNoTusks</graphicPath>
	      	<gender>Female</gender>
	      	<requiredGenes>
	        	<li>Joe_LoxoHead_Gene</li>
	      	</requiredGenes>
	</HeadTypeDef>

	<!-- Loxodon Head Gene Def (stats moved to specialized genes) -->
	<GeneDef ParentName="GeneJawBase">
		<defName>Joe_LoxoHead_Gene</defName>
		<label>loxodon head</label>
		<description>Carriers of this gene have a head featuring elephant-like features. A nearly prehensile trunk offers a slight gain to manipulation, and their tough skin offers protection against blunt and sharp weapons.</description>
	    <iconPath>UI/Icons/Genes/Joe_LoxoHead_Gene</iconPath>		
		<displayOrderInCategory>9802</displayOrderInCategory>
		<biostatMet>2</biostatMet>	
		<skinIsHairColor>false</skinIsHairColor>	
		<hairTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>Bald</li>
			</tags>
		</hairTagFilter>
		<beardTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>NoBeard</li>
			</tags>
		</beardTagFilter>	
	</GeneDef>

	<!-- Loxodon Tusks Gene (receives sharp armor & mining speed) -->
	<GeneDef ParentName="Joe_TuskGeneBase">
		<defName>Joe_LoxoTusks_Gene</defName>
		<label>loxodon tusks</label>
		<displayCategory>Joe_Tusks_Category</displayCategory>
		<description>Those born with this gene grow ornate tusks, often etched with the history of their lineage. Their tusks afford some piercing protection and aid in prying or digging actions.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoTusks_Gene</iconPath>		
		<selectionWeight>0</selectionWeight>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite> 
		<forcedHeadTypes>
	    	<li>Joe_LoxoHeadTusks_Head</li>
	    </forcedHeadTypes>
		<statOffsets>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<MiningSpeed>0.1</MiningSpeed>
		</statOffsets>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<texPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadTusks/LoxoHeadTusks</texPath>
				<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
				<useSkinShader>true</useSkinShader>
				<useRottenColor>true</useRottenColor>
				<colorType>Skin</colorType>
				<shaderTypeDef>CutoutComplex</shaderTypeDef>
				<parentTagDef>Head</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<visibleFacing>
					<li>East</li>
					<li>South</li>
					<li>West</li>
					<li>North</li>
				</visibleFacing>
				<drawData>
					<defaultData>
						<layer>50</layer>
					</defaultData>
				</drawData>
			</li>
		</renderNodeProperties>
		<modExtensions>
      		<li Class="BigAndSmall.PawnExtension">
        		<forceGender>Male</forceGender>
      		</li>
    	</modExtensions>
	</GeneDef>
	
	<!-- Loxodon No Tusks Gene (unchanged visual; no added stats) -->
	<GeneDef ParentName="Joe_TuskGeneBase">
		<defName>Joe_LoxoNoTusks_Gene</defName>
		<label>tuskless</label>
		<displayCategory>Joe_Tusks_Category</displayCategory>
		<description>Those born with this gene do not grow tusks, setting them apart from their tusked kin.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoTusks_Gene</iconPath>		
		<selectionWeight>0</selectionWeight>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite> 
		<forcedHeadTypes>
	    	<li>Joe_LoxoHeadNoTusks_Head</li>
	    </forcedHeadTypes>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<texPath>Things/Pawn/Humanlike/Heads/LoxoHead/LoxoHeadNoTusks/LoxoHeadNoTusks</texPath>
				<narrowCrownHorizontalOffset>0.03</narrowCrownHorizontalOffset>
				<useSkinShader>true</useSkinShader>
				<useRottenColor>true</useRottenColor>
				<colorType>Skin</colorType>
				<shaderTypeDef>Cutout</shaderTypeDef>
				<parentTagDef>Head</parentTagDef>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<visibleFacing>
					<li>East</li>
					<li>South</li>
					<li>West</li>
					<li>North</li>
				</visibleFacing>
				<drawData>
					<defaultData>
						<layer>50</layer>
					</defaultData>
				</drawData>
			</li>
		</renderNodeProperties>
		<modExtensions>
      		<li Class="BigAndSmall.PawnExtension">
        		<forceGender>Female</forceGender>
      		</li>
    	</modExtensions>
	</GeneDef>	


	<!-- Loxodon Ears Gene (carries sensitivity drawback) -->
	<GeneDef ParentName="GeneEarsBase">
		<defName>Joe_LoxoEars_Gene</defName>
		<label>loxodon ears</label>
		<selectionWeight>0</selectionWeight>
		<description>Those born with this gene grow wide, fan-like ears, said to echo the wisdom of generations past. Their sensitivity leaves them slightly more affected by toxic environments.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoEars_Gene</iconPath>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite>
		<statOffsets>
			<ToxicEnvironmentResistance>-0.2</ToxicEnvironmentResistance>
		</statOffsets>
	</GeneDef>

	<!-- Loxodon Trunk Gene (manipulation & blunt resilience) -->
	<GeneDef ParentName="GeneNoseBase">
		<defName>Joe_LoxoTrunk_Gene</defName>
		<label>loxodon trunk</label>
		<description>Carriers of this gene develop powerful, dexterous trunks; an emblem of adaptability and ancestral might. Their trunk grants fine control and distributes impact force.</description>
		<iconPath>UI/Icons/Genes/Joe_LoxoTrunk_Gene</iconPath>
		<prerequisite>
    		<li>Joe_LoxoHead_Gene</li>
  		</prerequisite>
		<displayCategory>Miscellaneous</displayCategory>
		<displayOrderInCategory>410</displayOrderInCategory>
		<capMods>
			<li>
				<capacity>Manipulation</capacity>
				<postFactor>1.1</postFactor>
			</li>
		</capMods>
		<statOffsets>
			<ArmorRating_Blunt>0.1</ArmorRating_Blunt>
		</statOffsets>
  	</GeneDef>

	<!-- Loxodon Xenotype -->
	<XenotypeDef>
  		<defName>Joe_Loxodon_Xeno</defName>
  		<label>loxodon</label>
		<description>Loxodons are a humanoid species of elephants originally from Ravnica, who found their way to Faerûn. Known for their calm demeanor, Loxodons often serve as an oasis of tranquility. They hum or chant in sonorous tones and move slowly or sit in perfect stillness. As they say, “There are three things all wise men fear: the sea in storm, a night with no moon, and the anger of a gentle man.”</description>
		<descriptionShort> A humanoid species of elephants originally from Ravnica, who found their way to Faerûn.</descriptionShort>
  		<iconPath>UI/Icons/Xenotypes/Loxodon</iconPath>
  		<inheritable>true</inheritable>
  		<genes>
			<!-- bodies -->
			<li>Body_Hulk</li> 																<!-- cpx/met = 0 -->
			
			<!-- heads --> 
			<li>Joe_LoxoHead_Gene</li>

			<!-- appearance -->
			<li>Joe_LoxoEars_Gene</li>														<!-- cpx/met = 0 -->
			<li>Joe_LoxoTusks_Gene</li>														<!-- cpx/met = 0 -->
			<li>Joe_LoxoNoTusks_Gene</li>													<!-- cpx/met = 0 -->
			<li>Joe_LoxoTrunk_Gene</li>														<!-- cpx/met = 0 -->
			<li MayRequire="Neronix17.Outland.Genetics">Outland_Skin_Sage</li>				<!-- cpx/met = 0 -->
			<li MayRequire="Neronix17.Outland.Genetics">Outland_Skin_Marble</li>			<!-- cpx/met = 0 -->			
			<li>Skin_SheerWhite</li>														<!-- cpx/met = 0 -->
			<li>Skin_LightGray</li>															<!-- cpx/met = 0 -->
      		<li>Skin_Blue</li>																<!-- cpx/met = 0 -->
      		<li>Skin_Purple</li>															<!-- cpx/met = 0 -->
			<li MayRequire="RedMattis.BigSmall.Core">BS_LargeFrame</li>						<!-- cpx = 2 met = -2 -->

			<!-- buffs -->
			<li>PsychicAbility_Enhanced</li>												<!-- met = -2 -->
			<li>BS_PerfectMemory</li>														<!-- Elephant never forgets cpx = 1 met = -1 -->
			<li>Aggression_DeadCalm</li>													<!-- met = -1 -->
			<li>KindInstinct</li>															<!-- met = -1 -->
			<li MayRequire="redmattis.bigsmall.core">BS_NaturalArmor</li>					<!-- cpx = 1 met = -2 -->
            <li MayRequire="redmattis.bigsmall.core">BS_SlowAging</li>  					<!-- cpx = 1 -->
			<li>Robust</li>																	<!-- met = -2 -->

			<!-- debuffs -->
			<li>MoveSpeed_Slow</li> 														<!-- met = 3 -->
			<li>Sleepy</li> 																<!-- met = 2 -->
			
			<!-- flavour / personality -->
