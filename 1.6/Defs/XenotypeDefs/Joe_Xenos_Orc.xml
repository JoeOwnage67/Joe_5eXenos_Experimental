<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<!--====================== ORC HEADS ======================-->

	<!--====================== Bases ======================-->

	<HeadTypeDef Name="OrcAverageFBase" ParentName="AverageBase" Abstract="True">
		<randomChosen>false</randomChosen>
		<gender>Female</gender>
		<requiredGenes>
			<li>Joe_OrcHead_Gene</li>
		</requiredGenes>
	</HeadTypeDef>

	<HeadTypeDef Name="OrcAverageMBase" ParentName="AverageBase" Abstract="True">
		<randomChosen>false</randomChosen>
		<gender>Male</gender>
		<requiredGenes>
			<li>Joe_OrcHead_Gene</li>
		</requiredGenes>
	</HeadTypeDef>

	<!--====================== Average Heads ======================-->

	<HeadTypeDef ParentName="OrcAverageFBase">
		<defName>Joe_OrcHeadFemale_Head</defName>
		<graphicPath>Things/Pawn/Humanlike/Heads/OrcHead/Female/OrcHeadFemale</graphicPath>
		<!--<eyeOffsetEastWest>(0.11, 0, 0.19)</eyeOffsetEastWest>-->
	</HeadTypeDef>

	<HeadTypeDef ParentName="OrcAverageMBase">
		<defName>Joe_OrcHeadMale_Head</defName>
		<graphicPath>Things/Pawn/Humanlike/Heads/OrcHead/Male/OrcHeadMale</graphicPath>
		<!--<eyeOffsetEastWest>(0.17, 0, 0.18)</eyeOffsetEastWest>-->		
	</HeadTypeDef>

	<!--====================== Orc GENEDEFS ======================-->

	<!-- Orc Head Gene Def -->
	<GeneDef ParentName="GeneJawBase">
		<defName>Joe_OrcHead_Gene</defName>
		<label>orc head</label>
		<labelShortAdj>orc</labelShortAdj>
		<description>Carriers of this gene have a head featuring orc-like features. Their prominent tusks and heavy brow give them a fearsome appearance, while their tough skin offers protection against blunt and sharp weapons.</description>
		<iconPath>UI/Icons/Genes/Joe_OrcHead_Gene</iconPath>
		<displayCategory>Cosmetic</displayCategory>
		<displayOrderInCategory>98</displayOrderInCategory>
		<!--<iconColor>(0.75, 0.75, 0.75)</iconColor>-->
		<!--<minMelanin>2</minMelanin>-->
		<forcedHeadTypes>
			<li>Joe_OrcHeadFemale_Head</li>
			<li>Joe_OrcHeadMale_Head</li>
		</forcedHeadTypes>
	</GeneDef>

	<!-- Orc Hair Gene Def -->
	<GeneDef ParentName="GeneHairStyleBase">
		<defName>Hair_OrcOnly</defName>
		<label>orc-haired</label>
		<labelShortAdj>orc</labelShortAdj>
		<description>Carriers of this gene can only grow orc style hair.</description>
		<iconPath>UI/Icons/Genes/Joe_OrcHead_Gene</iconPath>
		<displayOrderInCategory>55</displayOrderInCategory>
		<hairTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>Hair_Orc</li>
			</tags>
		</hairTagFilter>
  	</GeneDef>

	<!-- Orc Beard Gene Def -->
	<GeneDef ParentName="GeneBeardStyleBase">
		<defName>Beard_OrcOnly</defName>
		<label>only bushy beards</label>
		<labelShortAdj>bushy</labelShortAdj>
		<description>Male carriers of this gene experience rapid beard growth and are uncomfortable cutting their beards.</description>
		<iconPath>UI/Icons/Genes/Gene_BeardStyleBushyOnly</iconPath>
		<displayOrderInCategory>60</displayOrderInCategory>
		<beardTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>Beard_Orc</li>
			</tags>
		</beardTagFilter>
  	</GeneDef>

<!-- Orc -->
