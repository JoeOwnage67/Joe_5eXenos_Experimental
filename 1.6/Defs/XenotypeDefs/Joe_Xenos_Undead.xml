	<!-- Undead Head Gene Def -->
	<GeneDef ParentName="GeneJawBase">
        <defName>Joe_UndeadHead_Gene</defName>
        <label>undead head</label>
        <selectionWeight>0</selectionWeight>
        <description>A formerly dead head, it is not in top condition.</description>
        <biostatCpx>0</biostatCpx>
        <biostatMet>0</biostatMet>
        <iconPath>UI/Icons/Genes/Joe_UndeadHead_Gene</iconPath>
		<displayCategory>Cosmetic</displayCategory>
		<displayOrderInCategory>98</displayOrderInCategory>
		<!--<iconColor>(0.75, 0.75, 0.75)</iconColor>-->
		<!--<minMelanin>2</minMelanin>-->
		<forcedHeadTypes>
			<li>Joe_UndeadFemale_Head1</li>
            <li>Joe_UndeadFemale_Head2</li>
            <li>Joe_UndeadFemale_Head3</li>
            <li>Joe_UndeadFemale_Head4</li>
			<li>Joe_UndeadMale_Head1</li>
            <li>Joe_UndeadMale_Head2</li>
            <li>Joe_UndeadMale_Head3</li>
            <li>Joe_UndeadMale_Head4</li>
		</forcedHeadTypes>
		<beardTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>NoBeard</li>
            </tags>
        </beardTagFilter>
        <hairTagFilter>
            <whitelist>true</whitelist>
            <tags>
                <li>Bald</li>
            </tags>
        </hairTagFilter>
	</GeneDef>


