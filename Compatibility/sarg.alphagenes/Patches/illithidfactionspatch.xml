<?xml version="1.0" encoding="utf-8"?>
<Patch>

<!-- adding illithid to existing factions -->

	<!-- PirateBandBase -->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/FactionDef[@Name="PirateBandBase"]/xenotypeSet/xenotypeChances</xpath>    
		<match Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[@Name="PirateBandBase"]/xenotypeSet/xenotypeChances</xpath>
		<value>
			<AG_MindDevourer>0.05</AG_MindDevourer>
		</value>
		</match>
	</Operation>

	<!--PirateWaster-->
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/FactionDef[defName="PirateWaster"]/xenotypeSet/xenotypeChances</xpath>
		<match Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName="PirateWaster"]/xenotypeSet/xenotypeChances</xpath>
		<value>
        	<AG_MindDevourer>0.05</AG_MindDevourer>
     	</value>
		</match>
  	</Operation>

	<!-- TribeCannibal -->
  	<Operation MayRequire="ludeon.rimworld.ideology" Class="PatchOperationConditional">
		<xpath>Defs/FactionDef[defName="TribeCannibal"]/xenotypeSet/xenotypeChances</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/FactionDef[defName="TribeCannibal"]</xpath>
			<value>
				<AG_MindDevourer>0.05</AG_MindDevourer>
			</value>
		</match>		
  	</Operation>

	<!--CannibalPirate-->
	<Operation MayRequire="ludeon.rimworld.ideology" Class="PatchOperationConditional">
		<xpath>Defs/FactionDef[defName="CannibalPirate"]/xenotypeSet/xenotypeChances</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs/FactionDef[defName="TribeCannibal"]</xpath>
			<value>
				<AG_MindDevourer>0.05</AG_MindDevourer>
			</value>
		</match>		
  	</Operation>

</Patch>