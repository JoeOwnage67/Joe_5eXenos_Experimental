<?xml version="1.0" encoding="utf-8" ?>

<Defs>


	<!-- Facial Animation (No Mouth) Gene -->
	<GeneDef MayRequire="nals.facialanimation" ParentName="BS_NalDisableBase">
		<defName>Joe_FA_NoMouth</defName>
		<label>FA (no mouth)</label>
		<description>Retains all animations except the mouth.</description>
		<iconPath>GeneIcons/BS_NoFacialAnim</iconPath>
		<modExtensions>
			<li Class="BigAndSmall.PawnExtension">
				<facialDisabler>
					<headName>retain</headName>
					<browName>retain</browName>
					<lidName>retain</lidName>
					<lidOptionsName>retain</lidOptionsName>
          			<eyeballName>retain</eyeballName>
				</facialDisabler>
			</li>
		</modExtensions>
  	</GeneDef>

	<!-- Facial Animation (Mouth+Brows) Gene -->
	<GeneDef MayRequire="nals.facialanimation" ParentName="BS_NalDisableBase">
		<defName>Joe_FA_MouthBrows</defName>
		<label>FA (mouth+brows)</label>
		<description>Retains only the mouth and brows animations.</description>
		<iconPath>GeneIcons/BS_NoFacialAnim</iconPath>
		<modExtensions>
			<li Class="BigAndSmall.PawnExtension">
				<facialDisabler>
					<headName>retain</headName>
					<browName>retain</browName>
					<mouthName>retain</mouthName>
				</facialDisabler>
			</li>
		</modExtensions>
  	</GeneDef>




</Defs>
